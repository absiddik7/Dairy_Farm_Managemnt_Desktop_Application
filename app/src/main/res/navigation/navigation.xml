<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.app.quickquiz.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_gamePlayFragment"
            app:destination="@id/gamePlayFragment" />
        <action
            android:id="@+id/action_homeFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_quizFilterFragment"
            app:destination="@id/quizFilterFragment" />
    </fragment>
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.app.quickquiz.ui.RulesFragment"
        tools:layout="@layout/fragment_rules" >
        <action
            android:id="@+id/action_rulesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookmarkFragment"
        android:name="com.app.quickquiz.ui.BookmarkFragment"
        android:label="fragment_bookmark"
        tools:layout="@layout/fragment_bookmark" >
        <action
            android:id="@+id/action_bookmarkFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.app.quickquiz.ui.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.app.quickquiz.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/gamePlayFragment"
        android:name="com.app.quickquiz.classic.GamePlayFragment"
        android:label="GamePlayFragment"
        tools:layout="@layout/fragment_game_play" >
        <action
            android:id="@+id/action_gamePlayFragment_to_scoreFragment"
            app:destination="@id/scoreFragment"
            app:popUpTo="@id/homeFragment" />
        <argument
            android:name="catName"
            app:argType="string" />
        <action
            android:id="@+id/action_gamePlayFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/arcadeFragment"
        android:name="com.app.quickquiz.arcade.ArcadeFragment"
        android:label="fragment_arcade"
        tools:layout="@layout/fragment_arcade" >
        <argument
            android:name="categoryName"
            app:argType="string" />
        <argument
            android:name="minutes"
            app:argType="integer" />
        <action
            android:id="@+id/action_arcadeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_arcadeFragment_to_scoreFragment"
            app:destination="@id/scoreFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.app.quickquiz.categories.CategoriesFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_categoryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_categoryFragment_to_quickPlayFragment"
            app:destination="@id/gamePlayFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFilterFragment"
        android:name="com.app.quickquiz.arcade.quizFilter.QuizFilterFragment"
        android:label="QuizFilterFragment"
        tools:layout="@layout/fragment_quiz_filter">
        <action
            android:id="@+id/action_quizFilterFragment_to_timeTrialFragment"
            app:destination="@id/arcadeFragment"
            app:popUpTo="@id/quizFilterFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_quizFilterFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_quizFilterFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.app.quickquiz.score.ScoreFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_score" >
        <argument
            android:name="rightAns"
            app:argType="long" />
        <argument android:name="wrongAns"
            app:argType="long" />
        <argument
            android:name="unAnswered"
            app:argType="long" />
        <action
            android:id="@+id/action_scoreFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_scoreFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/homeFragment" />
        <argument
            android:name="token"
            app:argType="string" />
        <action
            android:id="@+id/action_scoreFragment_to_gamePlayFragment"
            app:destination="@id/gamePlayFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_scoreFragment_to_categoryFragment"
            app:destination="@id/categoryFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_scoreFragment_to_quizFilterFragment"
            app:destination="@id/quizFilterFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
</navigation>